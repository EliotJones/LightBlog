@inject IOptions<SiteOptions> site

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @site.Value.Name</title>

    <link rel="stylesheet" href="~/css/site.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Libre+Baskerville" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Montserrat:700" rel="stylesheet" type="text/css">
</head>
<body>
    <nav class="menu">
        <h1>
            <a asp-controller="home"
               asp-action="index">@site.Value.Name</a>
        </h1>
        <h2>Thoughts of a developer</h2>
    </nav>
    <div class="container">
        <div class="row">
            <main class="eight columns">
                @RenderBody()
            </main>
            @if (ViewData["include-aside"] == null)
            {
                <aside class="four columns">
                    @await Component.InvokeAsync("SideBar")
                </aside>
            }
        </div>
    </div>

    <footer>
        <div class="row">
            <div class="eight columns"></div>
            <div class="four columns"></div>
        </div>
    </footer>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.3.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
    </environment>

    <script src="~/js/site.min.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>

    @RenderSection("scripts", required: false)

    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-53514050-1', 'auto');
        ga('send', 'pageview');
    </script>
</body>
</html>
